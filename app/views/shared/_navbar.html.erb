<div class="navbar sticky-top navbar-expand-sm">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/dcwt8cjne/image/upload/v1624429250/Releasy_logo-lighter_bwyrgf.png" %>
  <% end %>

  <% if user_signed_in? %>
    <div class="mr-auto">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item <%= "active" if params[:controller] == "feeds" %>">
          <%= link_to "Feed", feed_path, class: "nav-link" %>
        </li>
        <li class="nav-item <%= "active" if params[:controller] == "dashboards" %>">
          <%= link_to "Following", dashboard_path, class: "nav-link" %>
        </li>
        <li class="nav-item <%= "active" if params[:controller] == "artists" %>">
          <%= link_to "Find", artists_path, class: "nav-link" %>
        </li>
      </ul>
    </div>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <% if user_signed_in? %>
      <div class="nav-item dropdown">
        <div class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-image: url('<%= current_user.image_url %>')"></div>
        <%# <%= image_tag current_user.image_url, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Account", "#", class: "dropdown-item" %>
          <%= link_to "Connect to Spotify", "/auth/spotify", class: "dropdown-item", method: :post %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </div>
    <% else %>
      <div class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </div>
    <% end %>
  </div>
</div>

