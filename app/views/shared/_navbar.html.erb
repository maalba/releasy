<div class="navbar sticky-top navbar-expand-sm">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/thumb/f/ff/Font_R.svg/600px-Font_R.svg.png" %>
  <% end %>

  <% if user_signed_in? %>
    <div class="mr-auto">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item <%= "active" if params[:controller] == "feeds" %>">
          <%= link_to "Feed", feed_path, class: "nav-link" %>
        </li>
        <li class="nav-item <%= "active" if params[:controller] == "dashboards" %>">
          <%= link_to "Following", dashboard_path, class: "nav-link" %>
        </li>
        <li class="nav-item <%= "active" if params[:controller] == "artists" %>">
          <%= link_to "Find", artists_path, class: "nav-link" %>
        </li>
      </ul>
    </div>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <% if user_signed_in? %>
      <div class="nav-item dropdown">
        <%= image_tag "https://clinicforspecialchildren.org/wp-content/uploads/2016/08/avatar-placeholder.gif", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Account", "#", class: "dropdown-item" %>
          <%= link_to "Connect to Spotify", "'/auth/spotify'", class: "dropdown-item", method: :post %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </div>
    <% else %>
      <div class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </div>
    <% end %>
  </div>
</div>

