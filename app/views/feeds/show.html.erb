<ul class="nav nav-pills mb-3 justify-content-end" id="pills-tab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active btn btn-outline-light" id="pills-list-tab" data-toggle="pill" href="#pills-list" role="tab" aria-controls="pills-list" aria-selected="true">List</a>
  </li>
  <li class="nav-item">
    <a class="nav-link btn btn-outline-light" id="pills-calendar-tab" data-toggle="pill" href="#pills-calendar" role="tab" aria-controls="pills-calendar" aria-selected="false">Calendar</a>
  </li>
</ul>
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-list" role="tabpanel" aria-labelledby="pills-list-tab">
    <div class="album-container">
      <h1>New Releases</h1>
        <% unless @album_releases.empty? %>
          <% latest_date = @album_releases.first.release_date + 1 %>
          <% @album_releases.each do |album| %>
            <% if album.release_date < latest_date %>
              <% latest_date = album.release_date %>
              <% new_date = true %>
              <div class="date-with-card">
                <div class="feed-date">
                  <p class="feed-month text-left"><%= "#{Date::ABBR_MONTHNAMES[latest_date.month]}" %></p>
                  <p class="feed-day"><%= "#{latest_date.day}" %></p>
                </div>
            <% end %>
            <%= render 'components/album_card', album: album %>
            <% if new_date %>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <h3 class="no-feed-message">No new releases...go ahead and <%= link_to "follow some more artists!", artists_path %></h3>
        <% end %>
    </div>
  </div>
  <div class="tab-pane fade" id="pills-calendar" role="tabpanel" aria-labelledby="pills-calendar-tab">
    <%= month_calendar(events: @album_releases) do |date, releases| %>
      <%= date %>

      <% releases.each do |release| %>
        <div class="tooltip-name">
          <%= release.artists.first.name %>
          <span class="tooltip-details">
            <%= link_to "https://open.spotify.com/album/#{release.spotify_id}", target: "_blank", class: "album-link" do %>
              <i class="fab fa-spotify"></i>
            <% end %>
            <%= release.title %>
          </span>
        </div>
      <% end %>
    <% end %>
  </div>
</div>



